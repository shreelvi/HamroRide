        <nav class="navbar navbar-expand-md navbar-dark site-navbar border-bottom box-shadow mb-3" role="navigation">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AnantDFW</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <!-- Inline SVG toggler to ensure visibility even if external CSS overrides the default icon -->
                    <svg class="navbar-toggler-svg" width="24" height="18" viewBox="0 0 24 18" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false">
                        <line x1="2" y1="3" x2="22" y2="3" stroke="#ff8c00" stroke-width="2.5" stroke-linecap="round" />
                        <line x1="2" y1="9" x2="22" y2="9" stroke="#ff8c00" stroke-width="2.5" stroke-linecap="round" />
                        <line x1="2" y1="15" x2="22" y2="15" stroke="#ff8c00" stroke-width="2.5" stroke-linecap="round" />
                    </svg>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Ride</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Lyft">Lyft</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Room">Room</a></li>
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-md-0">
                        <li class="nav-item"><a class="nav-link btn btn-outline-light disabled" href="https://help.uber.com/" target="_self" aria-label="Help">Help</a></li>
                        <li class="nav-item"><a class="nav-link btn btn-outline-light disabled" href="https://m.uber.com/looking" target="_self" aria-label="Log in" disabled>Log in</a></li>
                        <li class="nav-item"><a class="nav-link btn btn-outline-light disabled" href="https://m.uber.com/looking" target="_self" aria-label="Sign up" disabled>Sign up</a></li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Anant - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
